@model List<GameWebDemo.Models.Msg>
@using GameWebDemo.Models

@{
    ViewBag.Title = "视频图片";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div id="clink">
        <img src="~/img/icon_home2.png" />
        @Html.ActionLink("首页", "index", "home")>
        @Html.ActionLink("视频图片", "videos", "home")
    </div>
    <div id="list">
        @foreach (var item in Model)
        {
            <dl>
                <dt>
                    <a href="/Msg/Detail?Msg_id=@item.MsgID">
                        <img src="@item.MsgPhoto" />
                    </a>
                </dt>
                <dd id="title">
                    <a href="/Msg/Detail?Msg_id=@item.MsgID">
                        @item.MsgTitle
                    </a>
                </dd>
                <dd id="txt">
                    <a href="/Msg/Detail?Msg_id=@item.MsgID">
                        @item.MsgText
                    </a>
                </dd>
            </dl>
        }
        <div style="clear:both"></div>
    </div>
</div>