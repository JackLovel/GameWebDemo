@model List<GameWebDemo.Models.Msg>
@using GameWebDemo.Models

@{
    ViewBag.Title = "英雄档案";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div id="clink">
        <img src="~/img/icon_home2.png" />
        @Html.ActionLink("首页", "index", "home")>
        @Html.ActionLink("英雄档案", "heros", "home")
    </div>
    @*图文混排，英雄列表*@
    <div id="heros">
        @foreach (var item in Model)
        {
            <dl>
                <dt>
                    <a href="/Msg/Detail?Msg_id=@item.MsgID">
                        <img src="@item.MsgPhoto" />
                    </a>
                </dt>
                <dd id="title">
                    <a href="/Msg/Detail?Msg_id=@item.MsgID">
                        @item.MsgTitle
                    </a>
                </dd>
            </dl>
        }
        <div style="clear:both"></div>
    </div>
</div>