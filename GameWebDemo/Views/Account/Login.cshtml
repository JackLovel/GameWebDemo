
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>无尽征途登录</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    @*页眉*@
    <div id="hlogo"> 
        <img src="/img/logo2.png"/>
        <p>用户登录</p>
    </div>
    <div id="login">
        @using (Html.BeginForm("login", "Account", FormMethod.Post)) 
        {
            <input name="UserName" type="text" class="input-block" placeholder="账号"/>
            <input name="Password" type="password" class="input-block" placeholder="密码"/>
            <input type="submit" value="登录"/>
        }
     @*显示错误信息, TempData 用于跨页传值，但是取一次值就失效了！*@
    <div style="color:red">@TempData["msg"]</div>
    </div>
    <div id="footer">
        <p>wcc.net EULA | 隐私 | 法律条款 | 著作权侵权</p>
        <p>2018无尽科技有限公司版权所有。</p>
    </div>
</body>
</html>
